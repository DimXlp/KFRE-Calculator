<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/inputFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dimxlp.kfrecalculator.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.dimxlp.kfrecalculator.ui.InputFragment"
        android:label="Input"
        tools:layout="@layout/fragment_input" />

    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.dimxlp.kfrecalculator.ui.ResultsFragment"
        android:label="Results"
        tools:layout="@layout/fragment_results" />

    <fragment
        android:id="@+id/educationFragment"
        android:name="com.dimxlp.kfrecalculator.ui.EducationFragment"
        android:label="Education"
        tools:layout="@layout/fragment_education" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dimxlp.kfrecalculator.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
