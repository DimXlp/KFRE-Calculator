<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/recentCalcDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 Mar 2025"
        android:textSize="14sp"
        android:textColor="@color/textSecondary" />

    <TextView
        android:id="@+id/recentEgfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eGFR: 45 mL/min/1.73mÂ²"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/recentAcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACR: 300 mg/g"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/recentKFRE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-Year Risk: 12% (Medium)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textSecondary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#EEEEEE" />

</LinearLayout>