<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_options_format"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/formatGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <RadioButton
                android:id="@+id/rbPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_format_pdf" />

            <RadioButton
                android:id="@+id/rbCsv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_format_csv" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/cbIncludeCharts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_include_charts"
            android:paddingTop="8dp" />

        <CheckBox
            android:id="@+id/cbAnonymize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_anonymize"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_options_language"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
