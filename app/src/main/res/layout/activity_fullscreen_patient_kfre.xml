<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreenKfreRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:background="@android:color/white">

        <!-- Header row with title, filter and chevron -->
        <RelativeLayout
            android:id="@+id/kfreCardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/kfreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KFRE Assessments"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/btnExpandCollapse"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_collapse_from_fullscreen"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Expand KFRE Assessments Card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                app:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter"
                android:visibility="visible"
                android:contentDescription="Filter"
                app:tint="@color/colorPrimary"
                android:layout_toStartOf="@id/btnExpandCollapse"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp" />

        <!-- RecyclerView fixed height when collapsed -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKfreAssessments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:overScrollMode="ifContentScrolls" />
    </LinearLayout>

</FrameLayout>
