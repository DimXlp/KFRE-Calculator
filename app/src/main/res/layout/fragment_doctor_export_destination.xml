<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_destination_title"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/destGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <RadioButton
            android:id="@+id/rbSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_dest_save" />

        <RadioButton
            android:id="@+id/rbShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_dest_share" />
    </RadioGroup>

    <Button
        android:id="@+id/btnPickFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_choose_folder"
        android:paddingTop="8dp" />
</LinearLayout>
