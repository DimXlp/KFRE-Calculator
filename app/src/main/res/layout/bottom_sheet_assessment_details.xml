<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_rounded_background">

    <TextView
        android:id="@+id/titleDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KFRE Assessment Details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="12dp" />

    <!-- Age -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- Gender -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- eGFR -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="eGFR"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailEgfr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- ACR -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Albuminuria (ACR)"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailAcr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- 2-Year Risk -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2-Year Risk"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailRisk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- 5-Year Risk -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5-Year Risk"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailRisk5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- Notes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes"
        style="@style/LabelStyle" />

    <TextView
        android:id="@+id/txtDetailNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ValueStyle"/>

    <!-- Close Button -->
    <Button
        android:id="@+id/btnCloseDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        style="@style/PrimaryButton"
        android:layout_marginTop="16dp" />
</LinearLayout>
