<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/txtCkdEpiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eGFR: 58 mL/min/1.73mÂ²"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtAssessmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 May 2025"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtAssessmentNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient was stable, no changes..."
        android:textSize="14sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/btnDeleteAssessment"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete assessment"
        android:layout_gravity="end"
        android:visibility="gone"
        app:tint="@color/colorAccentDark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#EEEEEE" />
</LinearLayout>